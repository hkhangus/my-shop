<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="GUI.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:GUI"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
      xmlns:telerik="using:Telerik.UI.Xaml.Controls.Chart"
      Loaded="LoadData"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="16"
                    Background="#F0F0F0"
                    Padding="20,10,20,0">
            <TextBlock Text="Dashboard"
                       Style="{StaticResource SubtitleTextBlockStyle}" />
            <!--first row-->
            <Grid>
                <Grid.Resources>
                    <Style TargetType="Border">
                        <Setter Property="Background"
                                Value="White"></Setter>
                        <Setter Property="Padding"
                                Value="6"></Setter>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <!-- Divide the window into 4 equal columns -->
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>

                <!-- Row 1 -->
                <Border Grid.Column="0">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="📖"
                                   FontSize="40"
                                   VerticalAlignment="Center"
                                   Margin="0,0,20,0" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="PRODUCTIONS"
                                       TextWrapping="Wrap"
                                       Foreground="#969696" />

                            <TextBlock Name="productions"
                                       Text="{Binding}"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />

                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1"
                        Margin="20,0,10,0">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <FontIcon Glyph="&#xE71D;"
                                  FontSize="40"
                                  VerticalAlignment="Center"
                                  Margin="0,0,20,0" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="CATEGORIES"
                                       TextWrapping="Wrap"
                                       Foreground="#969696" />

                            <TextBlock Name="categories"
                                       Text="{Binding}"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />

                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Grid.Column="2"
                        Margin="10,0,20,0">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <FontIcon Glyph="&#xE7BF;"
                                  FontSize="40"
                                  VerticalAlignment="Center"
                                  Margin="0,0,20,0" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="ORDERS IN MONTHS"
                                       TextWrapping="Wrap"
                                       Foreground="#969696" />

                            <TextBlock Name="ordersM"
                                       Text="{Binding}"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />

                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Grid.Column="3">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <FontIcon Glyph="&#xE7BF;"
                                  FontSize="40"
                                  VerticalAlignment="Center"
                                  Margin="0,0,20,0" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="ORDERS IN WEEK"
                                       TextWrapping="Wrap"
                                       Foreground="#969696" />

                            <TextBlock Name="ordersW"
                                       Text="100.000"
                                       Style="{StaticResource SubtitleTextBlockStyle}" />

                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Add more rows and items as needed -->

            </Grid>

            <!--second row-->
            <Grid>
                <Grid.Resources>
                    <Style TargetType="Border">
                        <Setter Property="Background"
                                Value="White"></Setter>
                        <Setter Property="Padding"
                                Value="6"></Setter>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <!-- Divide the window into 4 equal columns -->
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Low stock"
                                   Style="{StaticResource BodyTextBlockStyle}" />

                        <ListView Name="bookQuantity">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Spacing="10"
                                                Margin="0,10,0,0">    
                                        
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <!--Cột 1 và 2 có kích thước mặc định (1*)-->
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="1*" />
                                                    <!--Cột 3 có kích thước nhỏ (Auto)-->
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding name}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Left"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,10,0"
                                                           Grid.Column="0" />
                                                <!--Nội dung trong cột 2-->
                                                <TextBlock Text="{Binding author}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Left"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,10,0"
                                                           Grid.Column="1" />
                                                <!--Nội dung trong cột 3-->
                                                <TextBlock VerticalAlignment="Center"
                                                           Grid.Column="2">
                                                        <Run Text="Quantity:" /> <Run Text="{Binding quantity}" />
                                                </TextBlock>

                                            </Grid>
                                        
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1"
                        Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Bestseller"
                                   Style="{StaticResource BodyTextBlockStyle}" />

                        <ListView Name="bookBestSel">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Spacing="10"
                                                Margin="0,10,0,0">
                                        
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <!--Cột 1 và 2 có kích thước mặc định (1*)-->
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="1*" />
                                                <!--Cột 3 có kích thước nhỏ (Auto)-->
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding name}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Left"
                                                           TextWrapping="Wrap"
                                                           Padding="0,0,10,0"
                                                           Grid.Column="0" />
                                                <!--Nội dung trong cột 2-->
                                                <TextBlock Text="{Binding author}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Left"
                                                           TextWrapping="Wrap"
                                                           Padding="0,0,10,0"
                                                           Grid.Column="1" />
                                                <!--Nội dung trong cột 3-->
                                                <TextBlock VerticalAlignment="Center"
                                                           Grid.Column="2">
                                    <Run Text="Total sold:" /> <Run Text="{Binding total_sold}" />
                                                </TextBlock>

                                            </Grid>
                                        
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>

            <TextBlock Text="Orders in week"
                       Style="{StaticResource SubtitleTextBlockStyle}"/>
            <!--chart--> 
            <Grid xmlns:telerikChart="using:Telerik.UI.Xaml.Controls.Chart"
                  Height="320">
                <telerikChart:RadCartesianChart x:Name="lineSeries"
                                                PaletteName="DefaultLight">
                    <telerikChart:RadCartesianChart.VerticalAxis>
                        <telerikChart:LinearAxis />
                    </telerikChart:RadCartesianChart.VerticalAxis>
                    <telerikChart:RadCartesianChart.HorizontalAxis>
                        <telerikChart:CategoricalAxis />
                    </telerikChart:RadCartesianChart.HorizontalAxis>

                    <telerik:RadCartesianChart.Grid>
                        <telerik:CartesianChartGrid MajorGridLinesVisibility="XY" />
                    </telerik:RadCartesianChart.Grid>


                    <telerikChart:LineSeries ItemsSource="{Binding}">
                        <telerikChart:LineSeries.CategoryBinding>
                            <telerikChart:PropertyNameDataPointBinding PropertyName="Category" />
                        </telerikChart:LineSeries.CategoryBinding>
                        <telerikChart:LineSeries.ValueBinding>
                            <telerikChart:PropertyNameDataPointBinding PropertyName="Value" />
                        </telerikChart:LineSeries.ValueBinding>
                    </telerikChart:LineSeries>
                </telerikChart:RadCartesianChart>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
