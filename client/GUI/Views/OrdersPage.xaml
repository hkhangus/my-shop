<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="GUI.Views.OrdersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Telerik.UI.Xaml.Controls"
             xmlns:telerikGrid="using:Telerik.UI.Xaml.Controls.Grid"
             xmlns:telerikData="using:Telerik.UI.Xaml.Controls.Data">
    <Grid>
        <controls:RadCollectionEditor x:Name="collectionEditor"
                                      ResizeGripperVisibility="Visible"
                                      Header="Employees"
                                      VerticalAlignment="Top" HorizontalAlignment="Left">
            <controls:RadCollectionEditor.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding FirstName}"/>
                        <TextBlock Text="{Binding LastName}" Margin="3 0 0 0"/>
                    </StackPanel>
                </DataTemplate>
            </controls:RadCollectionEditor.ItemTemplate>
        </controls:RadCollectionEditor>
    </Grid>

</Page>

